{
  "manifest_version": 3,
  "name": "CopyStack",
  "version": "1.0",
  "description": "Store multiple clipboard items and access them later",
  "permissions": ["storage", "clipboardRead", "clipboardWrite", "contextMenus", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 